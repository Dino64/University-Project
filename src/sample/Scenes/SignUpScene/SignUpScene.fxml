        <AnchorPane layoutX="210.0" layoutY="-1.0" prefHeight="400.0" prefWidth="390.0" style="-fx-background-color: #fff;">
            <children>
                <TextField fx:id="txtFldFirstName" layoutX="25.0" layoutY="122.0" prefHeight="26.0" prefWidth="159.0" promptText="First name" />
                <TextField fx:id="txtFldEmail" layoutX="191.0" layoutY="87.0" prefHeight="27.0" prefWidth="159.0" promptText="Email" />
                <TextField fx:id="txtFldLastName" layoutX="192.0" layoutY="122.0" prefHeight="27.0" prefWidth="159.0" promptText="Last name" />
